<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="650dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/image"
            android:layout_width="469dp"
            android:layout_height="400dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/genericcompany" />


        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-60dp"
            app:layout_constraintTop_toTopOf="@+id/name"
            app:srcCompat="@drawable/black_gradient_long"
            tools:layout_editor_absoluteX="0dp" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Glass View Luxury Glamping"
            android:textColor="@color/white"
            android:textSize="40dp"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="274dp" />

        <TextView
            android:id="@+id/shortDescription"
            android:layout_width="346dp"
            android:layout_height="46dp"
            android:text="orem Ipsum is simply dummy text of the printing and typesetting industry. Lorem"

            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="@+id/tag1"
            tools:layout_editor_absoluteY="416dp" />

        <TextView
            android:id="@+id/tag2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="#WomenOwned"
            android:textColor="@color/white"
            app:layout_constraintStart_toEndOf="@+id/tag1"
            tools:layout_editor_absoluteY="387dp" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:maxWidth="42dp"
            android:maxHeight="42dp"
            android:scaleType="fitCenter"
            app:layout_constraintStart_toStartOf="@+id/shortDescription"
            app:srcCompat="@drawable/location_icon"
            tools:layout_editor_absoluteY="467dp" />

        <TextView
            android:id="@+id/location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Seattle, Wa"
            android:textColor="@color/white"
            app:layout_constraintStart_toEndOf="@+id/imageView6"
            tools:layout_editor_absoluteY="475dp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="34dp"
            android:layout_height="56dp"
            android:layout_marginTop="-4dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView6"
            app:srcCompat="@drawable/sapling_lvl1_green"
            tools:layout_editor_absoluteX="16dp" />

        <TextView
            android:id="@+id/GROLvl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="Prospering"
            android:textColor="@color/white"
            app:layout_constraintTop_toBottomOf="@+id/location"
            tools:layout_editor_absoluteX="58dp" />

        <TextView
            android:id="@+id/tag1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="#Outdoor"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="387dp" />

        <LinearLayout
            android:layout_width="403dp"
            android:layout_height="57dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            tools:layout_editor_absoluteX="5dp">

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="68dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="195dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="Minimum"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/minimum"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="$5,000"
                    android:textColor="@color/white" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="Maximum"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/maximum"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="$500,000"
                    android:textColor="@color/white" />
            </LinearLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

